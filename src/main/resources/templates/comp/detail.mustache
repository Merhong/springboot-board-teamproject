{{> layout/header}}

<!-- 21번 -->

<div class="col-auto container border border-info mb-2">
	<h1 class="text-center mt-2">공고</h1>

	<div class="d-flex">
		<div class="m-1 col-4 d-flex flex-column align-items-center overflow-hidden" style="width:170px; height:280px;">
			<img src="../../../images/{{posting.user.compname}}_logo.png" class=""/>
		</div>

		<div class="col-8 p-2">

			<div class="input-group mb-3">
				<span class="input-group-text">회사명</span>
				<input type="text" class="form-control" value="{{posting.user.compname}}" disabled>
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">사업자번호</span>
				<input type="text" class="form-control" value="{{posting.user.compRegister}}" disabled>
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">주소</span>
				<textarea class="form-control" rows="2" disabled>{{posting.user.address}}</textarea>
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">전화번호</span>
				<input type="text" class="form-control" value="{{posting.user.tel}}" disabled>
			</div>
			<div class="input-group mb-2">
				<span class="input-group-text">홈페이지</span>
				<input type="text" class="form-control"
				       value="{{#posting.user.homepage}}{{posting.user.homepage}}{{/posting.user.homepage}}" disabled>
			</div>
		</div>

	</div>
	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">공고명</span>
		<input type="text" class="form-control" value="{{posting.title}}" disabled>
	</div>
	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">공고내용</span>
		<textarea class="form-control" rows="5" disabled>{{posting.desc}}</textarea>
	</div>
	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">직무</span>
		<input type="text" class="form-control" value="{{posting.position}}" disabled>
	</div>
	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">기술</span>
		<input type="text" class="form-control"
		       value="{{#posting.postingSkill}}{{skill.skillname}}, {{/posting.postingSkill}}" disabled>
	</div>

	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">학력</span>
		<input type="text" class="form-control"
		       value="{{#posting.education}}{{posting.education}}{{/posting.education}}" disabled>
	</div>

	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">연차</span>
		<input type="text" class="form-control" value="{{#posting.career}}{{posting.career}}{{/posting.career}}"
		       disabled>
	</div>

	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">지역</span>
		<input type="text" class="form-control" value="{{#posting.region}}{{posting.region}}{{/posting.region}}"
		       disabled>
	</div>

	<div class="input-group mb-3 ms-1">
		<span class="input-group-text">종료일</span>
		<input type="text" class="form-control"
		       value="{{#posting.expiryDate}}{{posting.expiryDate}}{{/posting.expiryDate}}" disabled>
	</div>


	<div class="d-flex">
		{{^sessionComp.compname}}
			<a href="/user/applyForm/{{postingId}}" class="w-50 mb-3 ms-2 btn btn-info">지원하기</a> {{! 지원하기 하이퍼링크연결 }}
			<button type="button" class="w-50 mb-3 ms-2 btn btn-warning">북마크하기</button>
		{{/sessionComp.compname}}
	</div>

</div>


{{> layout/footer}}