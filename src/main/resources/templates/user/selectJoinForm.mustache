{{> layout/header}}

<!--2번 회원가입 유형선택 화면-->
<style>
	.box {
		height: 230px;
		width: 230px;
	}

	.text {
		font-size: 35px;
	}
</style>

<div class="d-flex flex-fill align-items-center justify-content-center">
	<div
		class="d-flex align-items-center justify-content-center box card m-5 bg-info"
		onclick="userJoinForm()"
	>
		<div class="text">개인회원가입</div>
	</div>
	<div
		class="d-flex align-items-center justify-content-center box card m-5 bg-info"
		onclick="compJoinForm()"
	>
		<div class="text">기업회원가입</div>
	</div>
</div>

<script>
	function userJoinForm() {
		location.href = "/user/joinForm";
	}

	function compJoinForm() {
		location.href = "/comp/joinForm";
	}
</script>
