{{> layout/header}}

<!--3_개인회원가입 화면 -->
<div class="d-flex my-5">
  <div class="mx-auto card p-4 bg-info">
    <div>
      <h3 class="text-center mb-3">개인회원가입</h3>
    </div>

    <div class="mt-3"></div>

    <form action="/join" method="post" onsubmit="valid()">

    <form action="/login" method="post" onsubmit="">
      <div class="d-flex form-group mt-2 mb-2">
        <input type="email" name="email" class="form-control" placeholder="아이디(이메일)" id="email" />
        <button type="button" class="badge bg-secondary ms-2" onclick="">
          중복체크
        </button>
      </div>

      <div class="mt-4"></div>

      <div class="mb-2">
        <input type="password" name="password" class="form-control" placeholder="비밀번호" id="password" />
      </div>

      <div class="mb-2">
        <input type="password" class="form-control" placeholder="비밀번호 확인" id="passwordCheck" />
      </div>

      <div class="mt-4"></div>

      <div class="mb-2">
        <input
          type="name"
          name="name"
          class="form-control"
          placeholder="이름"
          id="name"
        />
        
      </div>

      <div class="mb-2">
        <input type="tel" name="tel" class="form-control" placeholder="전화번호" id="tel" />
      </div>

      <div class="mt-4"></div>

      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="" />
        <label class="form-check-label" for="flexCheckDefault">서비스 이용약관 관련 전체동의</label>
      </div>

      <hr />

      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="" />
        <label class="form-check-label" for="flexCheckChecked">(필수) 이용약관 동의</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="" />
        <label class="form-check-label" for="flexCheckChecked">(필수) 개인정보 수집 및 이용 동의</label>
      </div>

      <div class="mt-3"></div>

      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="" />
        <label class="form-check-label" for="flexCheckChecked">(선택) 이메일 수신 동의</label>
      </div>
      <div class="d-grid">
        <input id="button" class="btn btn-primary" type="submit" value="회원가입" onclick="" />
      </div>
    </form>
  </div>
</div>
{{> layout/footer}}