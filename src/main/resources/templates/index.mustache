{{> layout/header}}

<!-- 메인페이지(인덱스) 화면-->
<!-- 1, 6, 7, 8, 9 화면 연관-->
<!-- TODO 로그인전, 후 NavBar 설정 필요  -->
<div class="d-flex justify-content-center align-items-center">
	
	<div class="col-auto"></div>
	
	<div class="col-xxl-7 col-xl-9 col-lg-10 col-md-11 col-sm-12">


		<form action="/" method="get">
		<div class="d-flex justify-content-around ps-4 pe-4" style="height: 295px;">
			<div class="m-2 border border-info col-4">
				<h4 class="mt-2 text-center">지역별</h4>
				<div class="d-flex justify-content-around p-1">
						<div class="flex-wrap overflow-y-scroll border me-2 " style="height: 212px;">
							<button type="button" class="d-block border-0 bg-white text-start w-100 bg-secondary-subtle">전국</button>
							<hr class="m-0">
							<button type="button" class="d-block border-0 bg-white text-start w-100">서울/인천/경기</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">부산/울산/경남</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">대구/경북</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">광주/전라</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">대전/세종/충청</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">강원</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">제주</button>
						</div>
						<div class="flex-wrap overflow-y-scroll border " style="height: 212px;">
							<button type="button" class="d-block border-0 bg-white text-start w-100 bg-secondary-subtle">전체</button>
							<hr class="m-0">
							<button type="button" class="d-block border-0 bg-white text-start w-100">강서구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">금정구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">남구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">동구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">동래구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">부산진구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">북구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">사상구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">사하구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">서구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">수영구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">연제구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">영도구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">중구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">해운대구</button>
							<button type="button" class="d-block border-0 bg-white text-start w-100">기장군</button>
						</div>
				</div>

			</div>



			<div class="m-2 border border-info col-4">
				<h4 class="mt-2 text-center">기술별</h4>

				<div class="form-check d-inline-block ms-3 me-2">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" id="" name="skillList" value="all" {{#skillDTO.all}}checked{{/skillDTO.all}}>
					모두</label>
				</div>
				<button class="btn btn-primary" type="submit">검색하기</button>
				
				<hr class="m-1">
				<div class="d-flex flex-wrap">
					
					{{#skillList}}
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="checkbox" name="skillList" id="" value="{{skillname}}">
						{{skillname}}</label>
					</div>
					{{/skillList}}
					
				</div>
			</div>

			<div class="m-2 border border-info col-4">
				<h4 class="mt-2 text-center">직무별</h4>

				<div class="form-check d-inline-block ms-3 me-2">
					<label class="form-check-label">
						<input class="form-check-input" type="radio" id="" name="jobList" value="all" {{#jobDTO.all}}checked{{/jobDTO.all}}>
					모두</label>
				</div>
				<button class="btn btn-primary" type="submit">검색하기</button>

				<hr class="m-1">

				<div class="d-flex flex-wrap">

					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="backend" {{#jobDTO.backend}}checked{{/jobDTO.backend}}>
						백엔드</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="frontend" {{#jobDTO.frontend}}checked{{/jobDTO.frontend}}>
						프런트엔드</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="fullstack" {{#jobDTO.fullstack}}checked{{/jobDTO.fullstack}}>
						풀스택</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="android" {{#jobDTO.android}}checked{{/jobDTO.android}}>
						안드로이드</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="IOS" {{#jobDTO.IOS}}checked{{/jobDTO.IOS}}>
						IOS</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="embedded" {{#jobDTO.embedded}}checked{{/jobDTO.embedded}}>
						임베디드</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="bigdata" {{#jobDTO.bigdata}}checked{{/jobDTO.bigdata}}>
						빅데이터</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="server" {{#jobDTO.server}}checked{{/jobDTO.server}}>
						서버</label>
					</div>
					<div class="form-check d-inline-block ms-3 me-2">
						<label class="form-check-label">
							<input class="form-check-input" type="radio" id="" name="jobList" value="machinelearning" {{#jobDTO.machinelearning}}checked{{/jobDTO.machinelearning}}>
						머신러닝</label>
					</div>

				</div>


			</div>

			
		</div>
		</form>





		<div class="mb-4 d-flex flex-wrap">


			{{#postingList}}
			<div class="col-lg-3 col-md-4 col-sm-6">
				<div class="border border-info m-2 p-2">
					<h4 class="text-center fw-bold">{{user.compname}}</h4>
					{{#user.photo}}<a href="/comp/posting/{{id}}" class="text-black text-decoration-none"><img src="../../../images/{{user.photo}}" class="img-fluid d-block m-auto" style="height: 120px;">{{/user.photo}}
					{{^user.photo}}<a href="/comp/posting/{{id}}" class="text-black text-decoration-none"><img src="../../../images/no_logo.png" class="img-fluid d-block m-auto" style="height: 120px;">{{/user.photo}}
						<h5 class="mt-1 fw-bold">{{title}}</h5>
						<div class="mb-1 fst-italic">{{position}}</div>
						<div class="mb-1">
							{{#postingSkill}}<span class="badge bg-primary me-1">{{skill.skillname}}</span>{{/postingSkill}}
						</div>
						<div>
							{{#career}}<span class="badge bg-success">{{career}}</span>{{/career}}
							{{#education}}<span class="badge bg-success">{{education}}</span>{{/education}}
							<span class="badge bg-success">{{region}}</span>
						</div>
					</a>
					<div class="d-flex justify-content-between">
						<button type="button" class="border-0 bg-white mt-1"><h3>❤️</h3></button>
						<!-- <button type="button" class="border-0 bg-white mt-2"><h3>🤍</h3></button> -->
						<span class="fw-bold align-self-center me-2">{{#expiryDate}}{{expiryDate}}{{/expiryDate}}</span>
					</div>
				</div>
			</div>
			{{/postingList}}



			
		</div>
	</div>

	<div class="col-auto"></div>
</div>


{{> layout/footer}}